@model Class
@{
    ViewData["Title"] = "اضافة فصل";
}

<style>

    #outing, #changeData {
        z-index: 1000;
    }
</style>

<nav>
    <a class="logo">
        <img src="~/images/letterM.png">
    </a>
</nav>

<nav class="navbar navbar-expand-sm navbar-dark justify-content-center">
    <ul class="navbar-nav">

        <li class="nav-item list-inline-item">
            <a class="nav-link" href="/Stage/Index" tabindex="2"><i class="fas fa-university" title="السنواتُ الدراسيّة"></i></a>
        </li>

        <li class="nav-item list-inline-item">
            <a class="nav-link" onkeypress="goStage()" onclick="goStage()" tabindex="2"><i class="fas fa-chalkboard-teacher" title="الفُصول الدراسيّة"></i></a>
        </li>

    </ul>
</nav>

@if (ViewData["error"] != null)
{
    <script src="~/js/alertifyjs/alertify.min.js"></script>
    <script>
        alertify.error(" هذا الفصل يوجد مسبقا")
    </script>
}
<h4>اضافةُ فصلٍ جديدٍ</h4>
<form asp-action="Create" asp-controller="Class" method="post">

    <div class="add-classes">

        <input asp-for="@Model.Name" type="text" id="newClassName" placeholder="اسمُ الفصلِ الجديدِ" tabindex="1" title="اسمُ الفصلِ الجديدِ">

        <br>

        <input type="text" id="stageName" disabled tabindex="1" title="" />

        <br>

        <button type="submit" tabindex="1" id="buttonClass">اضافةُ الفصل</button>
    </div>
</form>

<!-- This is all CSS files for this page -->
<link rel="stylesheet" href="~/css/sumOfAllFiles.css" />
<link rel="stylesheet" href="~/css/addClass.css" />

<!-- This is all JAVASCRIPT files for this page -->
<script src="~/js/custom-addClass.js "></script>
<script>
    document.getElementById("logo").tabIndex = -1;

    function goStage() {
        window.open('/Class/Index/' + localStorage.getItem('stageId'), '_self');
    }
</script>